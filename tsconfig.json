{
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ScriptHost",
      "ES5",
      "ES6",
      "ES2015",
      "ES7",
      "ES2016",
      "ES2017",
      "ES2018",
      "ESNext"
    ],
    "jsx": "react",
    "target": "ES5",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./public",
    "./dist",
    "./.vscode",
    "./.idea"
  ]
}
